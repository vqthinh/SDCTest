@using PagedList.Mvc
@model PagedList.IPagedList<SDCTest.Model.Models.NhanVien>

@{
    ViewBag.Title = "Danh sách nhân viên";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Danh sách nhân viên</h2>

<table class="table table-striped table-bordered table-hover">
    <tr>
        <th>ID</th>
        <th>Họ Tên</th>
        <th>Ngày Sinh</th>
        <th>Email</th>
        <th>SĐT</th>
        <th>Tỉnh Thành</th>
        <th>Quận</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr id="row_@item.ID">
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HoTen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgaySinh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SDT)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TinhThanh.TenTinhThanh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quan.TenQuan)
            </td>
            <td>
                <a href="@Url.Action("Edit", "NhanVien")/@item.ID" class="btn btn-warning btn-sm" style="width: 40px; height: 40px; padding-top: 10px">
                    <i class="icon icon-edit" style="font-size: 20px;"></i>
                </a>
                @Ajax.ActionLink(" ", "Delete", new {@id = item.ID}, new AjaxOptions()
                {
                    Confirm = "Bạn có muốn xóa nhân viên này không?",
                    OnComplete = "$('#row_" + @item.ID + "').remove()",
                    HttpMethod = "Delete"
                }, new {@class = "btn delete-asset btn-danger btn-sm icon icon-trash", @style = "width: 40px; height: 40px;font-size: 20px"})
            </td>
        </tr>
    }
</table>
@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
<a class="btn btn-primary btn-lg" href="/NhanVien/Create">Thêm mới + </a>
